{
    "actorSpecification": 1,
    "name": "instagram-post-scraper",
    "title": "Instagram post Scraper",
    "description": "Scrapes Instagram posts based on Hashtag",
    "version": "0.0.1",
    "storages": {
      "dataset": {
        "actorSpecification": 1,
        "title": "Instagram Post Scraper",
        "description": "Too see all scraped properties, export the whole dataset or select All fields instead of Overview",
        "views": {
          "overview": {
            "title": "Overview",
            "description": "",
            "transformation": {
              "fields": [
                "displayUrl",
                "caption",
                "ownerFullName",
                "ownerUsername",
                "url",
                "commentsCount",
                "firstComment",
                "likesCount",
                "timestamp",
                "queryTag"
              ]
            },
            "display": {
              "component": "table",
              "columns": [
                {
                  "label": "Post",
                  "format": "image",
                  "field": "displayUrl"
                },
                {
                  "label": "Text",
                  "format": "text",
                  "field": "caption"
                },
                {
                  "label": "Post URL",
                  "format": "text",
                  "field": "url"
                },
                {
                  "label": "Number of comments",
                  "format": "text",
                  "field": "commentsCount"
                },
                {
                  "label": "First comment",
                  "format": "text",
                  "field": "firstComment"
                },
                {
                  "label": "Number of likes",
                  "format": "text",
                  "field": "likesCount"
                },
                {
                  "label": "Posted on",
                  "format": "text",
                  "field": "timestamp"
                },
                {
                  "label": "Author",
                  "format": "text",
                  "field": "ownerUsername"
                }
              ]
            }
          }
        }
      }
    }
  }
